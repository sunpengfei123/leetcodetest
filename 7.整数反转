class Solution {
    public int reverse(int x) {
        String s = x + "";
        int sign = 1;
        int index = 0;
        int l = s.length();

        if(s.charAt(index) == '-'){
            sign = -1;
            index++;
        }

        int re = 0;

        for(int i = l-1; i>=index; i--){
            char currChar = s.charAt(i);
            if (re > Integer.MAX_VALUE / 10 || (re == Integer.MAX_VALUE / 10 && (currChar - '0') > Integer.MAX_VALUE % 10)) {
                return 0;
            }
            if (re < Integer.MIN_VALUE / 10 || (re == Integer.MIN_VALUE / 10 && (currChar - '0') > -(Integer.MIN_VALUE % 10))) {
                return 0;
            }

            re = re*10 + sign*(currChar - '0');
        }

        return re;
        

    }
}


